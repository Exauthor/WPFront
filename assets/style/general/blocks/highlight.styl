.highlight__line
  background color-main--dark
  color color-main--dark
  transition .3s

input:focus ~ .highlight__line
  filter drop-shadow(0 0 3px currentColor)

.highlight__line--bottom
  width 100%
  height 2px
  position absolute
  bottom 0
  left 0

.highlight__line--left
  width 2px
  height 100%
  position absolute
  bottom 0
  left 0