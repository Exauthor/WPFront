@media screen and (max-width: 700px) 
  .wrapper
    display flex
    flex-direction column

  .page-content
    margin-left 0
    order 1
    min-height calc(100vh - 50px)

  .menu--main
    order 2
    position relative
    width 100%
    height 50px
    .menu__link
      display flex
      justify-content center
      //background white
      h4
        display none
    &.menu--minimize
      width 100%
    ul
      display flex
      & > *
        flex 1
    .menu__footer
      display none
