// Create after mixin - media-query('md', width)
@media (min-width: 960px)
  for i in 1..12
    .md{i}
        width ((100 / 12) * i)%


@media screen and (max-width: 700px)
  .wrapper
    display flex
    flex-direction column

  .page-content
    margin-left 0
    order 1
    min-height calc(100vh - 50px)

  .search-page__header
    flex-direction column
    align-items flex-start

  .search-page__search
    width 100%
    margin-bottom size-1

  .main-content
    margin-bottom 50px

  .menu--main
    order 2
    bottom 0
    width 100%
    height 50px
    .menu__link
      display flex
      justify-content center
      h4
        display none
    &.menu--minimize
      width 100%
    ul
      display flex
      & > *
        flex 1
    .menu__footer
      display none
