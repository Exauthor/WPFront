.toggle
  position relative
  display block
  .toggle__icon
    position absolute
    top 50%
    transform translateY(-50%)
    z-index 2
    &:first-child
      left 4px
    &:nth-child(3)
      right 4px

.toggle--classic
  height 20px
  width 40px
  border-radius 20px
  .toggle__item
    width 20px
    height 20px
    border-radius 50%
    transition .3s
  &.toggle--active 
    .toggle__item
      transform translateX(100%)

.toggle--arrow
  height 20px
  width 20px
  display flex
  align-item center
  justify-content center
  border-radius 20px
  .icon--arrow
    transition .3s
  &.toggle--active 
    .icon--arrow
      transform translateY(-50%) rotate(180deg)
