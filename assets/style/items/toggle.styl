.toggle
  position relative
  display block

.toggle--classic
  height 20px
  width 40px
  border-radius 20px
  background #204969
  .toggle__item
    width 20px
    height 20px
    background #fff7f7
    border-radius 50%
    transition .3s
  &.toggle--active 
    .toggle__item
      transform translateX(100%)
