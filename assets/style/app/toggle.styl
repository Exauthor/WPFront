.toggle
  position relative
  cursor pointer
  display block
  bgc--dark()
  .toggle__icon, .toggle__text
    font-size 11px
    position absolute
    top 50%
    transform translateY(-50%)
    z-index 2
    &:first-child
      left 4px
    &:nth-child(3)
      right 4px


.toggle--classic
  height 20px
  width 40px
  border-radius 20px
  .toggle__item
    width 20px
    height 20px
    border-radius 50%
    transition .3s
  &.toggle--active
    .toggle__item
      transform translateX(100%)

.toggle--arrow
  height 20px
  width 20px
  display flex
  align-item center
  justify-content center
  border-radius 20px
  bgc-main()
  .icon--arrow
    transition .3s
  &.toggle--active
    .icon--arrow
      transform translateY(-50%) rotate(180deg)

.toggle--plus
  height 30px
  width 30px
  display flex
  align-item center
  justify-content center
  border-radius 20px
  &::before, &::after
    content ''
    position absolute
    display block
    width 80%
    height 3px
    bgc()
    border-radius 3px
    transition .3s
  &::after
    transform rotate(90deg)
  &.toggle--active
    background color-error
    &::before
      transform rotate(-45deg)
    &::after
      transform rotate(45deg)