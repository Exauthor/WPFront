@import './mixins'
@import './variables'

html
  font-family 'Source Sans Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI',
    Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size 16px
  word-spacing 1px
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  box-sizing border-box

*,
*:before,
*:after
  box-sizing border-box

body
  padding 0
  margin 0

ul, menu
  padding 0
  margin 0

ul li
  list-style-type none

h1, h2, h3, h4, h5, h6
  font-weight 400
  margin 0

a
  text-decoration none
  color inherit
  outline none

svg
  width 100%
  height 100%

input, button
  border none
  color inherit
  &:focus
    outline none


@import './app/form'
@import './app/modal'
@import './app/input'
@import './app/button'
@import './app/avatar'
@import './app/toggle'
@import './app/upload'


